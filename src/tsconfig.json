{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "js_out",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.js"]
}
